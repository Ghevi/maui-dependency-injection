<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiApp2.MainPage">

    <ScrollView >
        <VerticalStackLayout
            Spacing="25"
            Padding="30,0"
            VerticalOptions="Center">

            <Label
                Text="Welcome to Dependency Injection Test"
                FontSize="18"
                HorizontalOptions="Center" />

            <Button
                x:Name="GetNamesBtn"
                Text="Click me!"
                Clicked="OnGetNamesClicked"
                HorizontalOptions="Center" />

            <CollectionView HorizontalOptions="Center" ItemsSource="{Binding Names}" />

        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
